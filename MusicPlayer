"""
ðŸŽµ MyPOD Music Player

Press 1 to Play
Press 2 to Exit

Press anything else to see the menu again.
"""

from replit import audio
import os, time

def play():
  source = audio.play_file('audio.wav')
  source.paused = False # unpause the playback
  while True:
    stop_playback = int(input("Press 2 to stop playback and go back to menu: "))
    if stop_playback == 2:
      source.paused = True
      return
    else:
      continue

while True:
  os.system('clear')
  print("ðŸŽµ MyPOD Music Player")
  time.sleep(1)
  print('Press 1 to play')
  time.sleep(1)
  print("Press anything else to return to menu")
  userinput = int(input())
  if userinput == 1:
    print("Playing song")
    play()
  elif userinput == 2:
    exit()
  else:
    continue
